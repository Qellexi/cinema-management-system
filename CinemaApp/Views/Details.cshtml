@model CinemaApp.Models.Movie

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/300x450" : Model.ImageUrl)" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p class="text-muted">@Model.Genre | Режисер: @Model.Director</p>
            <hr />
            <p>@Model.Description</p>

            <h4 class="mt-4">Розклад сеансів</h4>
            @if (Model.Sessions != null && Model.Sessions.Any())
            {
                <div class="list-group">
                    @foreach (var session in Model.Sessions.OrderBy(s => s.StartTime))
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong>@session.StartTime.ToString("dd.MM.yyyy HH:mm")</strong>
                                <span class="badge bg-secondary ms-2">@session.TicketPrice грн</span>
                            </span>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <button class="btn btn-sm btn-outline-primary">Забронювати</button>
                            }
                            else
                            {
                                <a href="/Identity/Account/Login" class="btn btn-sm btn-outline-dark">Увійдіть для бронювання</a>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-warning">На жаль, активних сеансів немає.</p>
            }
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
    </div>
</div>